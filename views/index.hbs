<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
  </head>
  <body>
    {{>navbar data=details}}
    {{>slider slides=slides}}
   
    {{!-- Services Section --}}
    <section id="services_section" class="py-3">
        <div class="container">
        <h1 class="text-center text-secondary">Our Services</h1>
        <div class="row mt-4">
          {{!-- first service column --}}
          {{#each services}}
          <div class="col-md-4 py-3"> 
            <div class="card">
                <div class="card-body">
                  <div class="container text-center py-3">
                  <i class="{{this.icon}} service_icon text-secondary"></i>
                  </div>
                  <h3 class="card-title">{{this.title}}</h3>
                  <a href="{{this.linkURL}}">{{this.linkText}}</a>
                  <a href="#" class="m1-3">Book Now</a>
                </div>
            </div>
          </div>
           {{/each}}
        </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/08e9928e48.js" crossorigin="anonymous"></script>
  </body>
</html>